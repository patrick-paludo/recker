{
  "name": "recker",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/patrick-paludo/recker.git"
  },
  "dependencies": {
    "@ant-design/compatible": "^1.1.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "antd": "^4.19.5",
    "concurrently": "^7.1.0",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^2.0.0",
    "fs-extra": "^10.1.0",
    "howler": "^2.2.3",
    "node-audiorecorder": "^3.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-scripts": "5.0.0",
    "wait-on": "^6.0.1",
    "web-vitals": "^2.1.4",
    "yarn": "^1.22.18"
  },
  "devDependencies": {
    "electron": "^18.0.2",
    "electron-builder": "^22.14.13",
    "eslint": "^8.14.0",
    "eslint-plugin-react": "^7.29.4"
  },
  "build": {
    "asar": true,
    "appId": "br.edu.unoesc.recker",
    "nsis": {
      "include": "build/installer.nsh",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "Recker"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "extraFiles": "dependencies/",
      "publish": ["github"]
    },
    "linux": {
      "target": "deb",
      "icon": "build/icon.ico",
      "publish": ["github"],
      "category": "Audio"
    }
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "npm run build && electron-builder --linux --win --x64 --ia32 --publish onTag",
    "build": "npm run react-build && npm run electron-build",
    "start": "concurrently -k \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "lint": "eslint \"**/*.{j,t}s\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
