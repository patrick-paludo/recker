{
  "name": "recker",
  "version": "0.1.3",
  "description": "Gravador de Ã¡udio",
  "private": true,
  "publish": [
    {
      "provider": "github"
    }
  ],
  "author": {
    "name": "Patrick C. Paludo & Marciel V. de Lara",
    "email": "patrick.paludo@unoesc.edu.br"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/patrick-paludo/recker.git"
  },
  "dependencies": {
    "@ant-design/compatible": "^1.1.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "antd": "^4.19.5",
    "Blob": "^0.10.0",
    "buffer": "^6.0.3",
    "concurrently": "^7.1.0",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^2.0.0",
    "filereader": "^0.10.3",
    "fs-extra": "^10.1.0",
    "howler": "^2.2.3",
    "node-audiorecorder": "^3.0.0",
    "react": "^18.0.0",
    "react-audio-player": "^0.17.0",
    "react-dom": "^18.0.0",
    "react-scripts": "5.0.0",
    "wait-on": "^6.0.1",
    "wav": "^1.0.2",
    "wavefile": "^11.0.0",
    "web-vitals": "^2.1.4",
    "yarn": "^1.22.18"
  },
  "devDependencies": {
    "electron": "^19.0.4",
    "electron-builder": "^22.14.13",
    "eslint": "^8.14.0",
    "eslint-plugin-react": "^7.29.4"
  },
  "build": {
    "files": [
      "build/**/*",
      "src/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "appId": "br.edu.unoesc.recker",
    "productName": "Recker",
    "nsis": {
      "oneClick": false,
      "include": "assets/installer.nsh",
      "installerIcon": "assets/256x256.ico",
      "uninstallerIcon": "assets/256x256.ico",
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "Recker"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/256x256.ico",
      "publish": [
        "github"
      ]
    },
    "linux": {
      "target": "deb",
      "icon": "./assets/256x256.png",
      "publish": [
        "github"
      ],
      "category": "Audio",
      "desktop": {
        "Name": "Recker",
        "Terminal": "false"
      }
    },
    "deb": {
      "depends": [
        "libnotify4",
        "libxtst6",
        "libnss3",
        "sox",
        "libsox-fmt-all"
      ]
    }
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "npm run build && electron-builder --linux --win --x64 --ia32 --publish never",
    "start": "concurrently -k \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "yarn build",
    "electron-pack": "electron-build -lw",
    "build": "npm run react-build && npm run electron-build -- -p never",
    "publish": "npm run react-build && npm run electron-build -- -p always"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
